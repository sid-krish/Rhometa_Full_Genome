manifest {
    description = 'Pairwise full genome population recombination rate estimation pipeline'
    nextflowVersion = '>= 20.10.0'
}

process {
    conda = 'environment.yaml'
    container = 'sidkris/rmeta:latest'

    executor = 'local'
    scratch = true
    cpus  = 4
    memory = 12.GB
    time = 5.h
}

docker {
    enabled = true
}

singularity {
    enabled = false
}

tower {
    accessToken = ''
    enabled = false
}
